<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.intracode.heliot.Launcher_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="321dp"
            app:srcCompat="@drawable/heliot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="Email: " />

            <EditText
                android:id="@+id/LauncherScreen_EnterEmailSpace_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:inputType="textEmailAddress" />

            <ProgressBar
                android:id="@+id/LauncherScreen_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:text="Lösenord: " />

            <EditText
                android:id="@+id/LauncherScreen_EnterPasswordSpace_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/LauncherScreen_LogIn_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000080"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Logga in" />

        <TextView
            android:id="@+id/LauncherScreen_CreateAccount_textClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000080"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Registrera ny användare" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000080"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
